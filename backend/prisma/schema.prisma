// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contractor {
  id                   String               @id
  firstName            String
  lastName             String
  socialSecurityNumber String?
  email                String?
  password             String?
  phoneCountryCode     String?
  phoneRegionCode      String?
  phoneNumber          String?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  Address_Contractor   Address_Contractor[]
  ContractedService    ContractedService[]
}

model Address_Contractor {
  id           String     @id
  address      Address    @relation(references: [id], fields: [addressId])
  addressId    String
  contractor   Contractor @relation(references: [id], fields: [contractorId])
  contractorId String
}

model Address {
  id                 String               @id
  street             String
  neighborhood       String
  zipCode            String
  city               String
  state              String
  stateNumber        String
  Address_Contractor Address_Contractor[]
  ServiceProvider    ServiceProvider[]
}

model ServiceProvider {
  id                   String    @id
  firstName            String
  lastName             String
  email                String
  password             String?
  phoneCountryCode     String?
  phoneRegionCode      String?
  phoneNumber          String?
  socialSecurityNumber String?
  bio                  String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  addressId            String
  address              Address   @relation(references: [id], fields: [addressId])
  imageId              String
  image                Image?    @relation(references: [id], fields: [imageId])
  Service              Service[]
}

model Image {
  id              String            @id
  name            String
  url             String
  key             String
  ServiceProvider ServiceProvider[]
  Category        Category[]
  SubCategory     SubCategory[]
}

model Category {
  id          String        @id
  name        String
  image       Image         @relation(fields: [imageId], references: [id])
  imageId     String
  SubCategory SubCategory[]
}

model SubCategory {
  id         String    @id
  name       String
  image      Image     @relation(fields: [imageId], references: [id])
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String
  imageId    String
  Service    Service[]
}

model Service {
  id                String              @id
  price             Int
  serviceProvider   ServiceProvider     @relation(fields: [serviceProviderId], references: [id])
  subCategory       SubCategory         @relation(fields: [subCategoryId], references: [id])
  subCategoryId     String
  serviceProviderId String
  ContractedService ContractedService[]
}

model ContractedService {
  id           String     @id
  service      Service    @relation(fields: [serviceId], references: [id])
  contractor   Contractor @relation(fields: [contractorId], references: [id])
  grade        Int?
  comment      String?
  serviceId    String
  contractorId String
}
